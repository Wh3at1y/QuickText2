<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainScreenActivityFragment"
    android:background="@drawable/orange_one"
    android:clickable="false">

    <Button
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:id="@+id/openContacts"
        android:singleLine="false"
        android:nestedScrollingEnabled="false"
        android:longClickable="false"
        android:enabled="true"
        android:clickable="true"
        android:allowUndo="false"
        style="@style/Base.TextAppearance.AppCompat.Display2"
        android:textSize="20dp"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:background="@drawable/plus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignBottom="@+id/newText" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/newText"
        android:background="@drawable/textbubbleedit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
